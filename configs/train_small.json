{
  "paths": {
    "train": "./data/java_small/training_preprocessed",
    "validate": "./data/java-small/validation_preprocessed",
    "vocabulary": "./data/java-small/vocabulary.pkl"
  },

  "hidden_states": {
    "embedding": 512,
    "encoder": 512,
    "decoder": 512
  },

  "embedding": {
    "embeddings": {
      "subtoken": {},
      "type": {}
    },
    "reduction": {
      "name": "linear",
      "params": {
        "n_embeds": 2,
        "h_emb": 512,
        "activation": "tanh"
      }
    }
  },

  "encoder": {
    "name": "TreeLSTM",
    "params": {
      "cell": {
        "name": "EdgeChildSumTreeLSTMCell",
        "params": {}
      },
      "dropout": 0.1
    }
  },

  "decoder": {
    "name": "LSTMDecoder",
    "params": {
      "dropout": 0.2,
      "teacher_force": 0.5,
      "attention": {
        "name": "LuongConcatAttention",
        "params": {}
      }
    }
  },

  "batch_size": 400,
  "n_epochs": 1,
  "lr": 0.01,
  "weight_decay": 1e-4,
  "clip_norm": 5,

  "scheduler": {
    "name": "step",
    "step_size": 500,
    "step_gamma": 0.1
  },

  "evaluation_step": -1,
  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 50,
  "checkpoints_folder": "checkpoints"
}
