{
  "paths": {
    "train": "./data/java-small/training_preprocessed",
    "validate": "./data/java-small/validation_preprocessed",
    "vocabulary": "./data/java-small/vocabulary.pkl"
  },

  "hidden_states": {
    "embedding": 256,
    "encoder": 256,
    "decoder": 256
  },

  "embedding": {
    "embeddings": {
      "token": {},
      "type": {}
    },
    "reduction": {
      "name": "sum",
      "params": {
      }
    }
  },

  "encoder": {
    "name": "TreeLSTM",
    "params": {
      "cell": {
        "name": "ChildSumTreeLSTMCell",
        "params": {
        }
      },
      "dropout": 0.25,
      "n_layers": 1
    }
  },

  "decoder": {
    "name": "LSTMDecoder",
    "params": {
      "dropout": 0.5,
      "teacher_force": 0.0,
      "attention": {
        "name": "LuongAttention",
        "params": {
            "score": "general"
        }
      }
    }
  },

  "batch_size": 500,
  "n_epochs": 1,
  "lr": 0.01,
  "weight_decay": 5e-4,
  "clip_norm": 20,

  "scheduler": {
    "name": "step",
    "size": 350,
    "gamma": 0.5
  },

  "evaluation_step": 100,
  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 500,
  "checkpoints_folder": "checkpoints",
  "wandb_project": "TreeLSTM-small"
}
