{
  "paths": {
    "train": "./data/java-small/training_preprocessed",
    "validate": "./data/java-small/validation_preprocessed",

    "vocabulary": "./data/java-small/vocabulary.pkl"
  },

  "hidden_states": {
    "embedding": 512,
    "encoder": 512,
    "decoder": 512
  },


  "embedding": {
    "name": "SubTokenTypeEmbedding",
    "params": {}
  },

  "encoder": {
    "name": "TokenTypeTreeLSTM",
    "params": {
      "dropout_prob": 0.2,
      "cell_type": "FullMultiHeadAttentionTreeLSTMCell",
      "cell_args": {
        "n_heads": 8,
        "a_size": 512
      }
    }
  },

  "decoder": {
    "name": "LSTMAttentionDecoder",
    "params": {
      "dropout_prob": 0.2
    },
    "attention": {
      "name": "LuongConcatAttention",
      "params": {}
    }
  },

  "batch_size": 400,
  "n_epochs": 1,
  "lr": 0.1,
  "weight_decay": 1e-4,
  "clip_norm": 5,
  "teacher_force": 0.5,
  "scheduler_step_size": 500,
  "scheduler_gamma": 0.1,

  "evaluation_step": 100,

  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 250,
  "checkpoints_folder": "checkpoints"
}
