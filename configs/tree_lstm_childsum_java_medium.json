{
  "paths": {
    "train": "./data/java-med/training_preprocessed",
    "validate": "./data/java-med/validation_preprocessed",
    "vocabulary": "./data/java-med/vocabulary.pkl"
  },

  "hidden_states": {
    "embedding": 256,
    "encoder": 256,
    "decoder": 256
  },

  "embedding": {
    "embeddings": {
      "token": {},
      "type": {}
    },
    "reduction": {
      "name": "sum",
      "params": {
      }
    }
  },

  "encoder": {
    "name": "TreeLSTM",
    "params": {
      "cell": {
        "name": "ChildSum",
        "params": {
        }
      },
      "dropout": 0.25,
      "n_layers": 1
    }
  },

  "decoder": {
    "name": "LSTM",
    "params": {
      "dropout": 0.5,
      "teacher_force": 0.0,
      "attention": {
        "name": "Luong",
        "params": {
            "score": "general"
        }
      }
    }
  },

  "batch_size": 500,
  "n_epochs": 1,
  "lr": 0.01,
  "weight_decay": 1e-4,
  "clip_norm": 20,

  "scheduler": {
    "name": "step",
    "step": 1000,
    "gamma": 0.5
  },

  "max_n_nodes": 250,
  "max_depth": 20,

  "evaluation_step": 1500,
  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 1500,
  "checkpoints_folder": "checkpoints",
  "wandb_project": "TreeLSTM-medium"
}
