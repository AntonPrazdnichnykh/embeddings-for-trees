{
  "paths": {
    "train": "./data/java-small/training_preprocessed",
    "validate": "./data/java-small/validation_preprocessed",

    "vocabulary": "./data/java-small/vocabulary.pkl",
    "labels": "./data/java-small/labels.pkl"
  },

  "embedding": {
    "name": "SubTokenEmbedding",
    "params": {
      "out_size": 128
    }
  },

  "encoder": {
    "name": "TreeLSTM",
    "params": {
      "x_size": 128,
      "h_size": 128
    }
  },

  "decoder": {
    "name": "LSTMAttentionDecoder",
    "params": {
      "embedding_size": 128,
      "hidden_size": 128,
      "dropout_prob": 0.5
    },
    "attention": {
      "name": "LuongConcatAttention",
      "params": {
        "hidden_size": 128
      }
    }
  },

  "batch_size": 250,
  "n_epochs": 1,
  "lr": 0.01,
  "weight_decay": 1e-4,
  "clip_norm": 5,
  "teacher_force": 0.5,

  "evaluation_step": 1000,

  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 10,
  "checkpoints_folder": "checkpoints"
}
