{
  "paths": {
    "train": "./data/test/training_preprocessed",
    "validate": "./data/test/validation_preprocessed",

    "vocabulary": "./data/java-small/vocabulary.pkl"
  },

  "hidden_states": {
    "embedding": 64,
    "encoder": 64,
    "decoder": 64
  },

  "embedding": {
    "name": "PositionalSubTokenTypeEmbedding",
    "params": {
      "n": 4,
      "k": 16
    }
  },

  "encoder": {
    "name": "Transformer",
    "params": {
      "n_head": 8,
      "n_layers": 2
    }
  },

  "decoder": {
    "name": "LSTMAttentionDecoder",
    "params": {
      "dropout_prob": 0.2
    },
    "attention": {
      "name": "LuongConcatAttention",
      "params": {}
    }
  },

  "batch_size": 8,
  "n_epochs": 1,
  "lr": 0.01,
  "weight_decay": 1e-4,
  "clip_norm": 5,
  "teacher_force": 0.5,
  "scheduler_step_size": 25,
  "scheduler_gamma": 0.1,

  "evaluation_step": -1,

  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 50,
  "checkpoints_folder": "checkpoints"
}
