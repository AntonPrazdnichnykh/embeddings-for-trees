{
  "paths": {
    "train": "./data/test_data/train",
    "validate": "./data/test_data/val",

    "vocabulary": "./data/java-small/vocabulary.pkl"
  },

  "hidden_states": {
    "embedding": 64,
    "encoder": 64,
    "decoder": 64
  },

  "embedding": {
    "name": "SubTokenTypeEmbedding",
    "params": {}
  },

  "encoder": {
    "name": "TokenTypeTreeLSTM",
    "params": {
      "dropout_prob": 0.2,
      "cell_type": "NodeChildSumTreeLSTMCell"
    }
  },

  "decoder": {
    "name": "LSTMAttentionDecoder",
    "params": {
      "dropout_prob": 0.2
    },
    "attention": {
      "name": "LuongConcatAttention",
      "params": {}
    }
  },

  "batch_size": 8,
  "n_epochs": 1,
  "lr": 0.01,
  "weight_decay": 1e-4,
  "clip_norm": 5,
  "teacher_force": 0.5,

  "evaluation_step": -1,

  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 50,
  "checkpoints_folder": "checkpoints"
}
