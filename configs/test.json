{
  "paths": {
    "train": "./data/java-test/training_preprocessed",
    "validate": "./data/java-test/validation_preprocessed",
    "vocabulary": "./data/java-test/vocabulary.pkl"
  },

  "hidden_states": {
    "embedding": 64,
    "encoder": 64,
    "decoder": 64
  },

  "embedding": {
    "embeddings": {
      "token": {},
      "type": {}
    },
    "reduction": {
      "name": "sum",
      "params": {}
    }
  },

  "encoder": {
    "name": "TwoOrderLSTM",
    "params": {
      "dropout": 0.25
    }
  },

  "decoder": {
    "name": "LSTMDecoder",
    "params": {
      "dropout": 0.5,
      "teacher_force": 0.0,
      "attention": {
        "name": "LuongAttention",
        "params": {
          "score": "general"
        }
      }
    }
  },

  "batch_size": 64,
  "n_epochs": 1,
  "lr": 0.1,
  "weight_decay": 1e-4,
  "clip_norm": 5,

  "scheduler": {
    "name": "cosine_warm_up",
    "warm_up_cf": 0.1,
    "max_lr": 0.1,
    "min_lr": 0.0
  },

  "evaluation_step": 50,
  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": -1,
  "checkpoints_folder": "checkpoints"
}
