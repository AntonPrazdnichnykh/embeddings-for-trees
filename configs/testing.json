{
  "paths": {
    "train_batches": "./data/test_data/train",
    "validation_batches": "./data/test_data/val",
    "test_batches": "./data/test_data/test",

    "vocabulary_path": "./data/java-small/vocabulary.pkl",
    "labels_path": "./data/java-small/labels.pkl"
  },

  "embedding": {
    "name": "SubTokenEmbedding",
    "params": {
      "out_size": 64
    }
  },

  "encoder": {
    "name": "TreeLSTM",
    "params": {
      "x_size": 64,
      "h_size": 64,
      "dropout_prob": 0.5
    }
  },

  "decoder": {
    "name": "LSTMAttentionDecoder",
    "params": {
      "embedding_size": 64,
      "hidden_size": 64,
      "dropout_prob": 0.5
    },
    "attention": {
      "name": "LuongConcatAttention",
      "params": {
        "hidden_size": 64
      }
    }
  },

  "batch_size": 8,
  "n_epochs": 10,
  "lr": 0.01,
  "weight_decay": 1e-4,
  "clip_norm": 5,

  "logging_step": 10,
  "logging_folder": "logs",
  "checkpoint_step": 1,
  "checkpoints_folder": "checkpoints"
}
